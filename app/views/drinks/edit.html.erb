<h1>Edit this drink!</h1>

<%= form_for @drink do |f| %>

<div>
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>

<div>
    <%= f.label :recipe %>
    <%= f.text_area :recipe %>
</div>

<%= f.submit "Submit these changes!" %>

<% end %>

<%= link_to "Back to drink timeline!", drinks_path %>